
#!/bin/bash

awk -F '{print $1, $2, $3, $4, $5, $6}' * | grep -w $1 | grep -e $2 | 
if [ $3 == "Blackjack" ]; then
        awk '{print $3, $4}' 
elif [ $3 == "Roulette" ]; then
        awk '{print $5, $6}' 
elif [ $3 == "Texas" ]; then
        awk '{print $7, $8}' 
else echo "NO"
fi
echo $1 $2 $3











